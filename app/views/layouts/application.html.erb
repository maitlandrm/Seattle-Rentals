<!DOCTYPE html>
<html>
<head>
  <title>SeattleRentals</title>

  <%= javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key=' + ENV["google_maps_key"] + '&libraries=places' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>
<% if !current_user %>
<nav class="navbar navbar-inverse">
	<div class="container">
		<div id="navbar">
			<!-- Start check for login/logout -->
				<div class = "nav navbar-nav pull-left">
				<h4 class = 'white'>Landlords:</h4>
				<div class = "form-group">
					<form class = "form-inline" method = "post" action = "/sessions">
						<input type = "hidden" name = "authenticity_token" value = "<%= form_authenticity_token %>" />
						<div class = "form-group">
							<input type = "email" id = "landlord_email" name = "email" placeholder = "email" /> 
						</div>
						<div class = "form-group">
							<input type = "password" id = "landlord_password" name = "password" placeholder = "password"/> 
						</div>
						<br>
						<br>
						<input type="submit" value = "Log In" class="btn btn-default active"/>
						<a class="btn btn-default" href="/landlords/new" role="button">Register</a>
					</form>
				</div>
				</div>
				<div class = "nav navbar-nav pull-right">
					<h4 class = 'white'>Tenants</h4>
					<div class = "form-group">
						<form class = "form-inline" method = "post" action = "/sessions">
							<input type = "hidden" name = "authenticity_token" value = "<%= form_authenticity_token %>" />
							<div class = "form-group">
								<input type = "email" id = "tenant_email" name = "email" /> 
							</div>
							<div class = "form-group">
								<input type = "password" id = "tenant_password" name = "password" /> 
							</div>
							<br>
							<br>
							<input type="submit" value = "Log In" class="btn btn-default active"/>
							<a class="btn btn-default" href="/tenants/new" role="button">Register</a>
						</form>
					</div>
					<h5 class = 'white'>OR Login With Facebook or Google</h5>
					<%= link_to 'Facebook Login', '/auth/facebook', :class => "btn btn-default btn-primary" %>
					<%= link_to 'Google Login', '/auth/google_oauth2', :class => "btn btn-default btn-primary" %>
				</div>
		</div>
	</div>
</nav>
<% end %>
<%= yield %>

</body>
</html>
