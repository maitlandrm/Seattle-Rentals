<div class = 'container'>
	<h2> Register</h2>
	<div class = "form-group">
		<form class = "form-horizontal" method = 'post' action = '/landlords'>
			<div class = "form-group">
				<input type = "hidden" name = "authenticity_token" value = "<%= form_authenticity_token %>" />
				<label for = "first_name">First Name </label>
				<br>
				<input type = "text" id = "first_name" name = "landlord[first_name]" /> 
			</div>
			<div class = "form-group">
				<label for = "last_name">Last Name</label>
				<br>
				<input type = "text" id = "last_name" name = "landlord[last_name]"/> 
			</div>
			<div class = "form-group">
				<label for = "business">Business Name (optional)</label>
				<br>
				<input type = "text" id = "business" name = "landlord[business]"/> 
			</div>
			<div class = "form-group">
				<label for = "phone">Phone Number</label>
				<br>
				<input type = "tel" id = "phone" name = "landlord[phone]"/> 
			</div>
			<div class = "form-group">
				<label for = "email">Email</label>
				<br>
				<input type = "email" id = "email" name = "landlord[email]"/> 
			</div>
			<div class = "form-group">
				<label for = "password">Password</label>
				<br>
				<input type = "password" id = "password" name = "landlord[password]"/> 
			</div>
			<div class = "form-group">
				<label for = "password_confirmation">Confirm Password</label>
				<br>
				<input type = "password" id = "password_confirmation" name = "landlord[password_confirmation]"/> 
			</div>
			<input type="submit" value = "Register" class="btn btn-default active">
		</form>
	</div>

	<% if flash[:errors] %>
	<ul class = 'text-danger'>
		<% flash[:errors].each do |e| %>
			<li class = "text-danger"><%= e %></li>
		<% end %>
	</ul>
	<% end %>
</div>