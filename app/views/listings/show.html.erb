<!-- MAP -->
<script type="text/javascript">
	var geocoder;
	var map;
	function initialize() {
		geocoder = new google.maps.Geocoder();
		var latlng = new google.maps.LatLng(47.6097, -122.3331);
		var mapOptions = {
		  zoom: 14,
		  center: latlng
	}
	map = new google.maps.Map(document.getElementById("map"), mapOptions);
	}

	function codeAddress(address) {
	initialize();
	var address = address;
	geocoder.geocode( { 'address': address}, function(results, status) {
	  if (status == google.maps.GeocoderStatus.OK) {
	    map.setCenter(results[0].geometry.location);
	    var marker = new google.maps.Marker({
	        map: map,
	        position: results[0].geometry.location
	    });
	  } else {
	    alert("Geocode was not successful for the following reason: " + status);
	  }
	});
	}


</script>
<!-- END MAP -->
<!-- AJAX call to get address back as json data -->
<script type="text/javascript">
	$(document).ready(function(){
		$.get("/listings/address", function(data){
			console.log(data)
			codeAddress(data[0]);
			$.get("https://maps.googleapis.com/maps/api/geocode/json?address=" + data[0] + "&key=" + data[1] + "", function(data){
				console.log(data.results[0].geometry.location);
				var lat = data.results[0].geometry.location.lat;
				var lng = data.results[0].geometry.location.lng;
				$.get("https://data.seattle.gov/resource/y7pv-r3kh.json?$where=within_circle(location," + lat + "," + lng + ", 200)&year=2016", function(data){
					console.log(data.length);
					$(".safety").append("<h5>" + data.length + " reported crimes in this area* in the last year</h5> <button id = 'info'>More Info</button>")
					$(".safety").append("<p>*200 meter radius of location<p>")
					if(data.length > 0){
						var count = 0;
						$("#info").on("click",function(){
							$("#crime_data").toggle(function(){
								console.log(data[0])
								if(count == 0){
									$(".data").append("<ul>");
									for(var i = 0; i < data.length; i++){
										$(".data").append("<li>" + data[i].summarized_offense_description + " - " + data[i].hundred_block_location +  " - " + data[i].occurred_date_or_date_range_start + "</li>");
									}
									$(".data").append("</ul>");
									count ++;
								} else {
									$(".data").children().remove();
									count --;

								}
							});
						})
					}
				})
			})

		});
	})

</script>
